<Window x:Class="Wpf.MqttNetTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.MqttNetTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Content="启动MQTT服务" Height="40" Margin="10 0 0 0" Click="btnStart"/>
            <Button Content="服务端体推送" Height="40" Margin="10 0 0 0" Click="brnSend"/>
        </StackPanel>


        <TextBox Name="txtResult" Grid.Row="1" Margin="5"/>

    </Grid>
</Window>
