/* packageA/pages/details/details.wxss */
page{
  --backColor--:lightgray
}

.header{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  background-color: var(--backColor--);
}
 
.PImgs{
  height: 30%;
  background-color: aqua;
  display: block;
  text-align: center;
}
.card{
  display: flex;
  flex-direction: column;
  margin: 20rpx 20rpx;
  width: auto;
  height: auto;
  background-color: var(--color--);
  border-radius: 20rpx;
}
.card .card-price{
  font-size:30px ;
  font-weight: bold;
  color: red;
}
.tags{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}
.tags .tag{
  margin: 10rpx;
  padding: 5rpx 20rpx;
  width: auto;
  background-color: lightcoral;
  color: red;
  border-radius: 10rpx;
}
