.container{
  height: auto;
  width: 100%;
  background-color: var(--backColor--);

}
.card .title{
  margin-top: 5rpx;
  margin-left: 60rpx; 
}
.operation{
  margin-top: 50rpx;
  margin-bottom: 20rpx;
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-around;
}

.card .card-row{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.card .van-row{
  padding: 10rpx;
 
} 
.card-row-img{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  height: auto;
}